{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@libs/common/(.*)": "<rootDir>/../libs/common/src/$1",
    "@libs/common": "<rootDir>/../libs/common/src",
    "@libs/clerk-contracts/(.*)": "<rootDir>/../libs/clerk-contracts/src/$1",
    "@libs/clerk-contracts": "<rootDir>/../libs/clerk-contracts/src",
    "@libs/user-contracts/(.*)": "<rootDir>/../libs/user-contracts/src/$1",
    "@libs/user-contracts": "<rootDir>/../libs/user-contracts/src",
    "@libs/blog-contracts/(.*)": "<rootDir>/../libs/blog-contracts/src/$1",
    "@libs/blog-contracts": "<rootDir>/../libs/blog-contracts/src",
    "@libs/comment-contracts/(.*)": "<rootDir>/../libs/comment-contracts/src/$1",
    "@libs/comment-contracts": "<rootDir>/../libs/comment-contracts/src"
  }
}